<%- include('./layout/header') %>

<h2>All Maybelline Products</h2>

<section class="productsSection">

<% data.forEach(data=>{ %>

    <div>
        <img src="<%=data.img%>" alt="">

        <h2><%=data.productname%></h2>
        <h3>Price: <%=data.price%></h3>
        <p><%=data.descrip%></p>

        <form action="/savetodb" method="POST">
            <input type="hidden" name="productname" value="<%=data.productname%>">
            <input type="hidden" name="price" value="<%=data.price%>">
            <input type="hidden" name="img" value="<%=data.img%>">
            <input type="hidden" name="descrip" value="<%=data.descrip%>">
            <button class="addButton" type="submit" >ADD TO CARD</button>
            
        </form>
    </div>

    <% }) %>

    </section>

<%- include('./layout/footer') %>